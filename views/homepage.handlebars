<h2 class="text-4xl font-bold text-center mt-8 mb-4">Recent Blogs</h2>
<div class="flex justify-center">
  <hr class="border border-slate-400 mb-8 w-48 rounded-lg" />
</div>
<div class="flex flex-col-reverse">
  {{#each blogs as |blog|}}
    <a href="/blog/{{blog.id}}">
      <div
        class="mb-4 blog border-slate-600 border-4 rounded-sm p-4 text-center bg-slate-200 transition-all duration-200 transform hover:scale-105"
      >
        <h2 class="text-2xl font-bold">
          {{blog.title}}
        </h2>
        <p class="text-slate-500">Created by
          {{blog.user.username}}
          on
          {{format_date blog.date_created}}</p>
      </div>
    </a>
  {{/each}}
</div>