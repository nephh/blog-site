<div class="flex flex-col gap-x-64 items-center">
  <h2 class="text-4xl font-bold text-center mb-8">Sign Up</h2>
  <p
    class="w-128 italic text-red-600 font-semibold mb-8 text-center"
    id="loginFail"
    style="display: none;"
  ></p>
  <div class="w-96">
    <form class="signup-form">

      <label class="font-bold" for="username-signup">Username:</label>
      <input
        class="w-full p-2 my-2 bg-slate-0 rounded-md border-2 focus:outline-none"
        type="text"
        id="username-signup"
      />

      <label class="font-bold" for="email-signup">Email:</label>
      <input
        class="w-full p-2 my-2 bg-slate-0 rounded-md border-2 focus:outline-none"
        type="text"
        id="email-signup"
      />

      <label class="font-bold" for="password-signup">Password:</label>
      <input
        class="w-full p-2 my-2 bg-slate-0 rounded-md border-2 focus:outline-none"
        type="password"
        id="password-signup"
      />

      <div class="mt-4 mx-2 flex flex-row items-center justify-between">
        <button
          class="border-2 font-bold border-slate-500 rounded-md bg-slate-400 p-2 text-slate-800 transition-all duration-200 transform hover:scale-105"
          type="submit"
        >Sign up</button>
      </div>

    </form>
  </div>
</div>

<script src="./js/signup.js"></script>