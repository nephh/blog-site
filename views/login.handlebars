<div class="flex flex-row gap-x-64 justify-center">
  <div class="flex flex-col w-96">
    <h2 class="text-4xl font-bold text-center mb-8">Login</h2>
    <p
      class="italic text-red-600 font-semibold mb-4 text-center"
      id="loginFail"
      style="display: none;"
    >Incorrect email/password!</p>

    <form class="login-form">
      <label class="font-bold" for="email-login">Email:</label>
      <input
        class="w-full p-2 my-2 bg-slate-0 rounded-md border-2 focus:outline-none"
        type="text"
        id="email-login"
      />

      <label class="font-bold" for="password-login">Password:</label>
      <input
        class="w-full p-2 my-2 bg-slate-0 rounded-md border-2 focus:outline-none"
        type="password"
        id="password-login"
      />

      <div class="mt-4 mx-2 flex flex-row items-center justify-between">
        <button
          class="border-2 font-bold border-slate-500 rounded-md bg-slate-400 p-2 text-slate-800 transition-all duration-200 transform hover:scale-105"
          type="submit"
        >Login</button>
        <p class="text-md">Don't have an account?
          <a class="ml-1 hover:underline text-blue-500" href="/signup">Sign up!</a></p>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>